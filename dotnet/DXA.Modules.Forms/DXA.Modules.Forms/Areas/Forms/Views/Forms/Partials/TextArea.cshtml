@model FormFieldModel

<div class="form-group">
    <label for="@Model.Name">@Model.Label</label>

    @{
        Dictionary<string, object> htmlAttributes = new Dictionary<string, object>();
        htmlAttributes.Add("rows", 5);
        htmlAttributes.Add("placeholder", Model.Label);
        htmlAttributes.Add("class", "form-control");
        htmlAttributes.Add("data-val", "true");

        if (Model.Required == "Yes")
        {
            htmlAttributes.Add("data-val-required", Model.RequiredError);
        }

        if (!string.IsNullOrEmpty(Model.ValidationRegex))
        {
            htmlAttributes.Add("data-val-regex-pattern", Model.ValidationRegex);
            htmlAttributes.Add("data-val-regex", Model.ValidationError);
        }

    }
    
    @Html.TextArea(Model.Name, Model.Value, htmlAttributes)
    @Html.ValidationMessageCustom(Model.Name)
</div>







